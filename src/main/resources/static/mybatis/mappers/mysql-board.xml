<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Edu.Dao.BoardDao">

<!-- Board 관련 쿼리 -->
	<select id="getList" resultType="Board">
		SELECT *
		FROM board
		ORDER BY registerdate;
	</select>
 
	<select id="selectMaxGrade" resultType="int">
		SELECT MAX(grade)
		FROM
		book;
	</select>
 
	<select id="findOne" parameterType="int" resultType="Board">
		SELECT *
		FROM
		board
		WHERE boardid=#{boardid}
	</select>
	<insert id="create" parameterType="Board">
		INSERT INTO board
		(title,content,registerid,registerdate)
		VALUES
		(#{title},#{content},#{id},CURRENT_TIMESTAMP())
	</insert>

	<delete id="delete" parameterType="int">
		DELETE FROM board
		WHERE
		boardid=#{boardid}
	</delete>

	<update id="save" parameterType="Board">
		UPDATE board
		SET
		content=#{content}, title=#{title}
		WHERE
		boardid=#{boardid}
	</update>
</mapper>